#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

[ $(pamixer --get-mute) = true ] && echo ðŸ”‡ && exit

vol="$(pamixer --get-volume)"

while [ "$?" -ne "0" ]; do
  vol="$(pamixer --get-volume)"
done

if [ "$vol" -gt "70" ]; then
  icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
  icon="ðŸ”ˆ"
else
  icon="ðŸ”‰"
fi

echo "$icon$vol%"
